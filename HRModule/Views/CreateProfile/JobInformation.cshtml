@model List<HRModule.Models.BranchModel>
@{
    ViewBag.Title = "JobInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="tab-pane fade pt-3" id="nav-jobinfo" role="tabpanel" aria-labelledby="nav-jobinfo-tab">
    <h3>
        Job Information
    </h3>
    <div class="form-group col-4">
        <label for="exampleFormControlFile1">Job Description</label>
        <input type="file" class="form-control-file" id="exampleFormControlFile1">
    </div>
    <div class="form-group col-4">
        <label for="exampleFormControlSelect1">Company Branch</label>
        <select class="form-control" id="exampleFormControlSelect1">

            @foreach (var item in Model)
            {
                <option value="@item.ID"> @item.Name </option>
            }
                
            

        </select>
    </div>
    <div class="form-group col-4">
        <label for="exampleFormControlSelect1">Department</label>
        <select class="form-control" id="exampleFormControlSelect1">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
    <div class="form-group col-4">
        <label for="exampleFormControlSelect1">Team</label>
        <select class="form-control" id="exampleFormControlSelect1">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
</div>